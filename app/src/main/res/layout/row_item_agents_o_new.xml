<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="@dimen/margin_1"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgDummy"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/dummy1_back5"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/margin_1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_weight="3.5">

            <TextView
                android:id="@+id/tvApplicantTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Applicant 1"
                android:textColor="@color/colorGray4"
                android:textSize="@dimen/text_size18"/>

            <TextView
                android:id="@+id/tvAgentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sam Norval"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size18"/>

            <LinearLayout
                android:id="@+id/liLayProductCoverage"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Coverage: "
                    android:textColor="@color/buttonBackBrownColor"
                    android:textSize="@dimen/text_size16"/>

                <TextView
                    android:id="@+id/tvCoverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$80,000"
                    android:textSize="@dimen/text_size16"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liLayAppointment"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appointment: "
                    android:textColor="@color/buttonBackBrownColor"
                    android:textSize="@dimen/text_size16"/>

                <TextView
                    android:id="@+id/tvAppointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/07/16, 1:20pm"
                    android:textSize="@dimen/text_size16"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liLayPercent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progressBarPercent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progress_bar"
                    android:progress="75"/>

                <TextView
                    android:id="@+id/tvPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75% Completed"
                    android:textSize="@dimen/text_size16"
                    android:textColor="@color/actionColor"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnMessage"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="@dimen/margin_7"
                android:text="@string/message"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_clicked_brown"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@color/colorBreak">
    </LinearLayout>
</LinearLayout>